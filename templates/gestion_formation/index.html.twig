{% extends 'base.html.twig' %}

{% block title %}Hello GestionFormationController!{% endblock %}

{% block body %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('formulaire') }}
    {% endblock %}

    {%  include './includes/navbar.html.twig' %}




    {% if formations is not empty %}

        <div class="container" style="margin-top: 20%">
        <div class="table">
            <div class="table-header">
                <div class="header__item"><a id="name" class="filter__link" >Titre</a></div>
                <div class="header__item"><a id="wins" class="filter__link filter__link--number" >Description</a></div>
                <div class="header__item"><a id="wins" class="filter__link filter__link--number" >Duree</a></div>
                <div class="header__item"><a id="draws" class="filter__link filter__link--number" >Fichier</a></div>
                <div class="header__item"><a id="losses" class="filter__link filter__link--number">Modifier</a></div>
                <div class="header__item"><a id="total" class="filter__link filter__link--number">Supprimer</a></div>
            </div>


        {%  for formation in formations %}


            <div class="table-content">
                <div class="table-row">
                    <div class="table-data">{{ formation.titre}}</div>
                    <div class="table-data">{{ formation.description}}</div>
                    <div class="table-data">{{ formation.duree}}</div>
                    <div class="table-data"><a href="{{ asset('uploads/pdf/' ~ formation.url) }}">Voir le pdf</a></div>
                    <div class="table-data"><a href="{{ path('modifier', {formationId: formation.id}) }}">Modifier</a></div>
                    <div class="table-data"><a href="{{ path('supprimer', {formationId: formation.id}) }}">Supprimer</a></div>
                </div>

            </div>

        {% endfor %}

        </div>

        </div>

    {% else %}

        <li>  Aucune donn√©es disponible </li>

    {% endif %}



    <h1 style="text-align: center"> Ajouter une formation </h1>
    <div id="form" class="topBefore">


        {{ form_start(form) }}

        {{ form_row(form.titre) }}
        {{ form_row(form.description) }}
        {{ form_row(form.url) }}
        {{ form_row(form.duree) }}
        {{ form_row(form.save) }}



        {{ form_end(form) }}

    </div>








{% endblock %}
